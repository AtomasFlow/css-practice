<header class="header">
	<a class="" href="#test">
		{{> logo}}
	</a>

	<nav class="header_nav">
		<div class="header_nav_right">
			{{> nav list=header}}
		</div>
	</nav>
</header>

<main class="main">
	{{#with info}}
	<div class="info">
		<h1 class="info_title">{{title}}</h1>
		<p class="info_text">{{description}}</p>
	</div>
	{{/with}}
	
	{{#with form}}
	<form class="form">
		<div class="fomr_input_list">
			{{#each inputs}}
			<input type="{{type}}" placeholder="{{placeholder}}" name="{{name}}" id="form_input-{{id}}" class="form_input">
			{{/each}}
		</div>

		<div class="form_checkbox">
			<input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
			<div></div>
			<label for="checkbox.name">{{checkbox.label}}</label>
		</div>

		<button class="form_button" type="submit">{{button}}</button>
		<div class="line"></div>
		<p class="form_info">{{info}}</p>
	</form>
	{{/with}}
</main>

<div class="updates">
	{{#with updates}}
	<h4 class="update_title">{{title}}</h4>
	{{#each list}}
	<div class="updates_list">
		<div class="updates_image"></div>
		<div class="updates_block">
			<strong class="block_nickname">{{nickname}}</strong>
			<p class="block_description">{{description}}</p>
		</div>
	</div>
	{{/each}}

	<a href="{{show_all.url}}">{{show_all.text}}</a>
	{{/with}}
</div>

<div class="expirience">
	{{#with expirience}}
	<h3 class="expirience_title">{{title}}</h3>
	<div>
		{{#each list}}
		<div class="card">
			<strong class="card_name">{{name}}</strong>
			<p class="card_description">{{details}}</p>
		</div>
		{{/each}}
	</div>
	<span class="expirience_badge">{{badge}}</span>
	{{/with}}
</div>

<footer class="footer" id="test">
	<div>
		{{> logo}}
		<span class="footer_copyright">Copyright 2023-2024</span>
	</div>

	{{#each footer}}
	<div>
		<span class="footer_title">{{title}}</span>
		{{> nav list=links isVertical=true}}
	</div>
	{{/each}}
</footer>

