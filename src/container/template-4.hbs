<header class="header">
	<a class="" href="#test">
		{{> logo}}
	</a>

	<nav class="header_nav">
		<div class="header_nav_right">
			{{> nav list=header}}
		</div>
	</nav>
</header>

{{#with main}}
<div class="main">
	
	<div class="main_content">
		<h1 class="main_title">{{heading}}</h1>
		<p class="main_text">{{description}}</p>
		<div>
			<a href="{{href}}" class="button main_button">{{button}}</a>
		</div>
	</div>
	<div class="hero_slider">
		<div class="hero_slider_icon hero_slider_lefr">{{left}}</div>
		<img src="{{image}}" alt="Hero image" class="main_image">
		<div class="hero_slider_icon hero_slider_right">{{right}}</div>
	</div>
	
</div>
{{/with}}


<main class="featured">
	{{#each featured}}
	{{> cardBlog data=this}}
	{{/each}}
</main>


<div class="form">
	{{#each actions}}
	<div class="form_content">
		<h3 class="form_title">{{heading}}</h3>
		<a href="{{url}}" class="form_button button">{{text}}</a>
	</div>
	{{/each}}
</div>


<footer class="footer" id="test">
	<div>
		{{> logo}}
		<span class="footer_copyright">Â© 2023</span>
	</div>

	{{#each footer}}
	<div>
		<span class="footer_title">{{title}}</span>
		{{> nav list=links isVertical=true}}
	</div>
	{{/each}}
</footer>

